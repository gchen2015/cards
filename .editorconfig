# EditorConfig: http://editorconfig.org

# Top-most editorconfig file
root = true

# Defaults
[**]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Defaults by file type
[*.xml]
indent_size = 2

[*.kt]
indent_size = 4

[*.html]
indent_size = 2

[*.js{,on}]
indent_size = 2

# Specific files
[pom.xml]
indent_size = 4
